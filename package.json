{
    "name": "mcphr-browser",
    "version": "1.0.0",
    "description": "Mountain Care HR App - Electron desktop app with SQLite storage",
    "main": "public/electron.js",
    "homepage": "./",
    "browser": {
        "fs": false,
        "path": false,
        "os": false,
        "vm": false
    },
    "scripts": {
        "start:client": "craco start",
        "start:server": "nodemon server/index.js",
        "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
        "build": "craco build",
        "test": "craco test --env=jsdom",
        "lint": "eslint .",
        "electron:dev": "concurrently \"BROWSER=none npm run start:client\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:dev:windows": "concurrently \"set BROWSER=none&& npm run start:client\" \"wait-on http://localhost:3000 && electron .\"",
        "electron:build": "npm run build && electron-builder build",
        "electron:build:win": "npm run build && electron-builder build --win",
        "electron:build:mac": "npm run build && electron-builder build --mac",
        "electron:build:linux": "npm run build && electron-builder build --linux",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.mountaincare.hr",
        "productName": "Mountain Care HR",
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "public/electron.js"
        ],
        "directories": {
            "buildResources": "assets"
        },
        "extraResources": [
            {
                "from": "node_modules/sql.js/dist",
                "to": "sql.js/dist",
                "filter": [
                    "*.wasm"
                ]
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "assets/icon.png"
        }
    },
    "dependencies": {
        "@electron/remote": "^2.1.2",
        "@fortawesome/fontawesome-svg-core": "^6.7.2",
        "@fortawesome/free-solid-svg-icons": "^6.7.2",
        "assert": "^2.1.0",
        "browserify-zlib": "^0.2.0",
        "buffer": "^6.0.3",
        "cors": "^2.8.5",
        "crypto-browserify": "^3.12.1",
        "electron-is-dev": "^2.0.0",
        "express": "^4.18.2",
        "https-browserify": "^1.0.0",
        "idb": "^8.0.2",
        "jsonwebtoken": "^8.5.1",
        "path-browserify": "^1.0.1",
        "pg": "^8.9.0",
        "querystring-es3": "^0.2.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^7.4.0",
        "sequelize": "^6.28.0",
        "sql.js": "^1.13.0",
        "stream-browserify": "^3.0.0",
        "stream-http": "^3.2.0",
        "url": "^0.11.4",
        "util": "^0.12.5",
        "vm-browserify": "^1.1.2",
        "web-vitals": "^4.2.4"
    },
    "devDependencies": {
        "@craco/craco": "^7.0.0",
        "@types/jsonwebtoken": "^9.0.9",
        "@types/node": "^18.0.0",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@types/sql.js": "^1.4.9",
        "concurrently": "^7.0.0",
        "electron": "^29.2.0",
        "electron-builder": "^24.13.1",
        "eslint": "^8.0.0",
        "nodemon": "^2.0.20",
        "react-scripts": "^5.0.1",
        "wait-on": "^7.2.0",
        "wasm-loader": "^1.3.0"
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "author": "Mountain Care Pharmacy",
    "license": "MIT",
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
